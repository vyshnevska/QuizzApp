-content_for :page_styles do
  -stylesheet_link_tag "games"

%h2
  Welcome Page
-if current_user
  .statistic_info
    %h4 User statistic:
    .details
      ="#{@c_p } points in #{@count_games} games."

    %h4= "Total score: #{@score}"
    -if @c_p !=0
      -if @c_p == @score
        = image_tag "nut.png", :class=> "nut_image"
    -if current_user.admin
      %h4 Total games:
      .details
        %span= "Draft: #{@draft}  |"
        %span= "Started: #{@started}  |"
        %span= "Finished: #{@finished}"
  -if current_user.admin?
    .friendship
      %h4 User Friendship:
      .details
        -unless current_user.inverse_friends.empty?
          -current_user.inverse_friends.each do |f|
            = f.name
        -else
          %h4 No Friends. Plase Find them.
          = link_to "Find Friends", root_path
      %h4 Other users:
      -@users.each do|user|
        .details
          = user.name
          = user.email
          = link_to "Add as a Friend", friendships_path(:friend_id => user.id), :method => :post 