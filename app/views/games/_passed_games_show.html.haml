%table
  %tr
    %td{:colspan => 4}
      %h3 Passed games
  - @games_passed.each do |game|
    - points = game.points.nil? ? 0 : game.points
    %th{:rowspan => 4}
      =image_tag "nut.png", :style => "width: 50px; height: 50px;"
    %tr
      %td.title{:style => "font-weight: bold;"}
        = "Game: #{game.id}"
      %td.date= game.created_at.to_formatted_s(:short)
      %td.date= game.updated_at.to_formatted_s(:short)
      %td= "Points: #{points} ( of #{game.total_score} )"
    %tr
      %td{:colspan => 4}
        Player
        %strong=game.try(:user).try(:name)
        wants to play game:
        %strong=game.quizz.description
    %tr
      %td.col= link_to '|Review|', review_game_path(game)
      %td.col= link_to '|Show|', game
      %td.col
      -if current_user.admin
        %td.col= link_to '|Destroy|', game, :method => :delete, :data => { :confirm => 'Are you sure?' }
      -else
        %td.col