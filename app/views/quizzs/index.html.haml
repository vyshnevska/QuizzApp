-content_for :page_styles do
  -stylesheet_link_tag "quizzs"

.quizzes
  .section
    %h3 Listing quizzs
    %hr.section_caption
  - @quizzes.each do |quizz|
    .details
      .item
        .quizz
          = "# #{quizz.id}  Quizz"
          %strong= "#{quizz.try(:description)}"
          %span.temp= current_user.admin ? quizz.status : ""
        .actions
          = link_to '|Edit|', edit_quizz_path(quizz) unless quizz.completed?
          = link_to 'Complete', complete_quizz_path(quizz) unless quizz.completed?

          = link_to '|Destroy|', quizz, :method => :delete, :data => { :confirm => 'Are you sure?' } if current_user.admin

  .section
    %hr

-if can? :create, Quizz.new
  = link_to 'New Quizz', new_quizz_path
