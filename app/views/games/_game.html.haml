- if game.passed?
  = render :partial => 'passed', :locals => {:game => game}
- else
  .details
    .item
      .quizz
        = I18n.translate('game.title')
        %strong=" # #{game.id}"
        = " #{game.try(:quizz).try(:description)}  ( #{game.state} )  ||  "
        %strong=game.try(:user).try(:name)
      .actions
        = link_to I18n.translate('actions.start'), {:controller => "games", :action => "new", :quizz_id => game.quizz_id }