!!!
%html{:style => "height: 100%;"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Myapp"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "my_bootstrap", "navigation_bar", "layout", "application"
    = yield :page_styles

    = javascript_include_tag "application", "games", "quizzes", "jquery"
    = csrf_meta_tags

    = yield(:head)
  %body{:style => "height: 100%;"}
    %section{:style => "height: auto; min-height: 100%;"}
      %header.navbar.navbar-fixed-top
        %nav.navbar-inner
          .container
            = render 'layouts/navigation'
      #main{:role => "main"}
        .container
          .content
            .row
              = yield :page_title
            .row
              .span12
                = render 'layouts/messages'
                = yield

        %div.hamster
      .clear{:style => "clear: both; height: 50px;"}

    %footer{:style => "height: 50px; margin-top: -52px;"}
      .foot