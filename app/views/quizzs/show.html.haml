%ul
  %p.temp= @quizz.id
  %h5= @quizz.description
  - @quizz.questions.each do |q|
    %li
      %h6= q.title
      - q.answers.each do |a|
        %ul
          - if a.is_correct?
            %p.temp= a.content
          - else
            %p= a.content
