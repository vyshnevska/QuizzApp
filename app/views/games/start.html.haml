:javascript
  jQuery(function() {
    $('#progress').css('width', "900px");

    $("input").click(function(){
      parent_div = $(this).parent();
      parent_tag = parent_div.parent();
      value = $(parent_tag[0]).attr("data-checked")
      if (value == 0) {
      //pulling current width
        var w =$('#myprogress').css("width");
        x = w.indexOf('p');
        width = parseInt(w.substring(0, x));
      //get weight for each answer
        var we =$('#progress').css("width");
        y = we.indexOf('p');
        count = $("#qns-list li").size();
        weight = parseInt(we.substring(0, y))/count;
      //updated with new value
        $('#myprogress').css('width', width + parseInt(weight) +"px");
        $(parent_tag[0]).attr("data-checked", 1);
      }
    });
  });

%h3 Start a quizz
%div{ :id => "progress", :class => "progress progress-warning progress-striped active" }
  %div{ :id => "myprogress", :class => "bar", :style =>"width:0px" }

= form_for @game, :url => finish_game_path(@game) do |f|
  .actions
    =f.label "Quizz"
    =@quizz.description
    %ul{:id => "qns-list"}
      -@quizz.questions.each do |q|
        %li{:data => {:checked => 0 }}
          =f.label "#{q.title}"
          -q.answers.each do |a|
            %div
              =radio_button_tag "answers[#{q.id}]", "#{a.id}", false, :class =>"#{q.id}"
              =f.label "#{a.content}"
    %br
  = f.submit 'Save'