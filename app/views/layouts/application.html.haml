!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Hamster"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "/assets/cute.ico", :rel => "shortcut icon"}
    %link{:rel => "stylesheet", :href => "http://railsgirls.com/assets/bootstrap.css"}
 
    = stylesheet_link_tag "my_bootstrap", "layout", "application", "hamster_header", "docs.min", "bootstrap_glyphicon"
    = yield :page_styles
    = javascript_include_tag "application", "games", "quizzes", "jquery", "http://localhost:9292/faye.js", 'jquery.tablesorter.min'
    = csrf_meta_tags

    = yield(:head)
  %body
    = render 'layouts/page_header'
    .container
      .content
        .row
          = yield :page_title
        .row
          .span12
            = render 'layouts/messages'
            = yield

      %div.hamster
      .clear
      = render 'layouts/page_footer'
